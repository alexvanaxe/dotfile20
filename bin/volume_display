#!/bin/sh

volume=$(pulseaudio-ctl full-status | awk '{print $1}')
is_muted=$(pulseaudio-ctl full-status | awk '{print $2}')
icon=

if [ "$volume" -eq "0" ]
then
	icon=""
elif [ "$volume" -gt "50" ]
then
	icon=""
elif [ "$volume" -eq "50" ]
then
	icon=""
elif [ "$volume" -lt "50" ]
then
	icon=""
fi

if [ "$is_muted" == "yes" ]
then
    icon=""
fi

echo -e "$icon $volume"
