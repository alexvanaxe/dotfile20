#!/bin/dash

# A script to use dmenu to change the light
GS=`printf auto | dmenu -f -p "Light digit: ($(xrandr --verbose | grep -m 1 -i brightness | cut -f2 -d ' ')) "`
if [ ! -z "$GS" ] && [ "auto" != "$GS" ]
then
	killall clight
	
	xrandr  | grep -w connected | cut -d ' ' -f 1 | while read line ; do
		xrandr --output $line --brightness $GS
	done

	notify-send -u low "Light" "Screen monitor set to $GS"
fi

if [ "auto" = "$GS" ]
then
    killall clight
	clight&
    notify-send -u low "Light" "Auto"
fi
