#! /bin/bash

running_sink="$(pactl list sinks | grep -C 1 "RUNNING" | tail -n 1 | cut -d ' ' -f 2)"

do_mute() {
    wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
}

do_up() {
    wpctl set-volume @DEFAULT_AUDIO_SINK@ ${1}%+
}

do_down() {
    wpctl set-volume @DEFAULT_AUDIO_SINK@ ${1}%-
}

command="$1"
param="$2"

case "$command" in
    "mute") do_mute;;
    "up") do_up ${param};;
    "down") do_down ${param};;
esac
