# Start the terminal
super + shift + Return
	alacritty

# start dmenu
super + d
	dmenu_run "${DMENU_COLOR[@]}"

# Toggle mute
XF86AudioMute
    pulseaudio-ctl mute

# Change volume
XF86Audio{Raise,Lower}Volume
    pulseaudio-ctl {up,down} 2

XF86MonBrightness{Down,Up}
    light -{U,A} 3

# Play Radio!
super + shift + r
	$HOME/bin/play_radio.sh "${DMENU_COLOR[@]}"

# Configure Printscreen
Print
	gnome-screenshot --interactive

#Player Control
super + shift + s
	$HOME/bin/player_ctl.sh "${DMENU_COLOR[@]}"

#Lock screen
super + shift + x
	$HOME/bin/lock.sh

#Fix Light
super + shift + i
	$HOME/bin/avalight "${DMENU_COLOR[@]}"

#Pomodoro
super + shift + p
	$HOME/bin/pomodoro-client.sh "${DMENU_COLOR[@]}"

#Todos
super + shift + t
	$HOME/bin/dtodosh.sh "${DMENU_COLOR[@]}"

# Change theme
super + shift + y
	$HOME/bin/theme_select.sh "${DMENU_COLOR[@]}"

#Power management
super + shift + e
	$HOME/bin/powercontrol.sh "${DMENU_COLOR[@]}"

# Toggle the top bar
super + shift + b
	$HOME/bin/polybar_toggle.sh

# Clipboard tool
super + shift + v
	$HOME/bin/dmclipster "${DMENU_COLOR[@]}"

# Equalizer
super + shift + a
	$HOME/bin/equalizer "${DMENU_COLOR[@]}"

# Edit Config file
super + shift + u
	$HOME/bin/configshortcut.sh "${DMENU_COLOR[@]}"

# Start stop conky
super + shift + c
	$HOME/.config/conky/conky.sh

# Chords
super + shift + g ; {1,2,8,i,f,c,r,s}
	{st -e ranger,st -e transmission-remote-cli,st -e weechat,java -jar $HOME/Documents/Invests/InvestCharts.jar,firefox,camera.sh,screeneaudio.sh play,screeneaudio.sh stop}

# Change wallpapers
super + shift + w ; {n}
	{nitrogen --save --set-scaled --random $HOME/Documents/Pictures/Wallpapers/night}

super + shift + w ; {d}
	{nitrogen --save --set-scaled --random $HOME/Documents/Pictures/Wallpapers/day}

###################
##### WM KEYS #####
###################

# quit/restart bspwm
super + {e,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# focus or send to the given desktop
super + control + {1-9,0}
	bspc node -d '^{1-9,10}' --follow

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# Cycle through nodes
super + control + {j,k} 
	bspc node -f {next,prev}

# send the newest marked node to the newest preselected node
super + n
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + u
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,ctrl + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set ignore ewmh to fullscreen to container
super + ctrl + f
	bspc config ignore_ewmh_fullscreen enter

super + ctrl + shift + f
	bspc config ignore_ewmh_fullscreen none

# set the node flags
super + {w,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# focus the node in the given direction
super + {h,j,k,l}
	bspc node -f {west,south,north,east}

# focus the node in the given direction
super + shift + {h,j,k,l}
	euclid_mover {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

#
# preselect
#

# preselect the direction
super + alt + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + alt + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + alt + space
	bspc node -p cancel

# expand a window by moving one of its side outward
super + control + {Left,Down,Up,Right}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + control + shift + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Increase/decrease window gap on focused desktop
super + bracket{left,right}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {-,+} 5 ))

# Increase/decrease window gap on focused desktop
super + equal
	bspc config -d focused window_gap 6

super + shift + equal
	bspc config -d focused window_gap 0

# Focus when clicking
~button1
	bspc pointer --grab focus
